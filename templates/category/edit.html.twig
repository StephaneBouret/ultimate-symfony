{% extends "base.html.twig" %}

{% block title %}
Modification de {{ category.name }}
{% endblock %}

{% block body %}
<h1>Modifier la catégorie {{ category.name }}</h1>
{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col">
        {{ form_row(form.name) }}
    </div>
</div>
<button type="submit" class='btn btn-primary'>
    <i class="fas fa-save"></i>
    Modifier la catégorie
</button>
{{ form_end(form) }}
{% endblock %}