{% extends "base.html.twig" %}

{% block title %}
Création d'un produit
{% endblock %}

{% block body %}
<h1>Nouveau produit</h1>
{{ form_start(form) }}
{{ form_errors(form) }}
<div class="row">
    <div class="col">
        {{ form_row(form.name) }}
        {{ form_row(form.price) }}
    </div>
    <div class="col">
    {{ form_row(form.picture) }}
        {{ form_row(form.shortDescription) }}
        {{ form_row(form.category) }}
    </div>
</div>
{# {{ form_widget(form) }} #}
<button type="submit" class='btn btn-primary'>
    <i class="fas fa-save"></i>
    Créer le produit
</button>
{{ form_end(form) }}
{% endblock %}